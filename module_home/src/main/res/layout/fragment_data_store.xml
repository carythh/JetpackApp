        android:text="读取"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:id="@id/btn3"
        android:text="存储proto"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
